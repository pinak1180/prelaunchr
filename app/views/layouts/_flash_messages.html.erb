<% flash.each do |name, msg| %>
  <div>
    <% if msg.class == Array %>
      <% msg.each do |m| %>
        <div class="<%= flash_class(name) %> fadein mt15 panel">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; </button>
             <%= m %> <br>
        </div>
      <% end %>
    <% else %>
      <div class="<%= flash_class(name) %> fadein mt15">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; </button>
          <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>
